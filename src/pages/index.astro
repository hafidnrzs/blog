---
import BaseHead from '../components/BaseHead.astro';
import Hero from '../components/landing/Hero.astro';
import Marquee from '../components/landing/Marquee.astro';
import BlogPreview from '../components/landing/BlogPreview.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">  
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      @media (min-width: 768px) {
        .container {
          border-inline: 1px solid var(--color-gray-02);
        }
      }
      .navbar .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-block: 15px;
        .logo {
          font-family: 'Noto Serif', serif;
          text-decoration: none;
          color: black;
        }
        ul {
          list-style: none;
          margin: 0;
          padding: 0;
          display: flex;
          li {
            font-family: 'Plus Jakarta Sans', sans-serif;
            display: inline-block;
            margin-left: 1.5rem;
            color: #747b8b;
            font-size: 1rem;
            a {
              text-decoration: none;
              color: inherit;
              &:hover {
                text-decoration: underline;
              }
            }
          }
        }
      }
      .spacer {
        height: 6rem;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar">
      <div class="container">
        <a href="/" class="logo">Hafid Nur</a>
        <ul class="nav-links">
          <li><a href="/blog">Blog</a></li>
        </ul>
      </div>
    </nav>
    <main>
      <Hero />
      <div class="container spacer"></div>
      <Marquee />
      <div class="container spacer"></div>
      <BlogPreview />
      <div class="container spacer"></div>
      <Footer />
    </main>
  </body>
</html>
